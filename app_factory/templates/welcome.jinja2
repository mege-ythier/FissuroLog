{% extends "layout.jinja2" %}

{% block pagestyles %}
  <link href="{{ url_for('static', filename='dist/css/welcome.css') }}" rel="stylesheet" type="text/css">

{% endblock %}

{% block content %}
  <h1>{{ body }}</h1>

  {% if current_user.is_authenticated %}
    <p>Hi {{ current_user.email }}!</p>
    <p>tu es {{ current_user.role }}!</p>
    <a href="{{ url_for('main_blueprint.logout') }}">Log out</a>
            {% if current_user.role =="guest" %}
            <a href="{{ '/dash_fissurolog_guest/' }}">lien vers dash</a>
            {% endif %}
            {% if current_user.role =="owner" %}
            <a href="{{ '/dash_fissurolog_owner/' }}">lien vers dash</a>
            {% endif %}


  {% endif %}

{% endblock %}
